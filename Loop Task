Example 1 
void function(int n){
	for(int i = 1; i <= 10; ++i){
		printf("%d * %d = %d\n",n,i,n*i);
	}
}
int main(){
	int n = 0;
	scanf("%d",&n);
	function(n);
	return 0;	
}
Example 2
int main(){
	int n = 0;
	scanf("%d",&n);
	int res = 0;
	while(n){
		res = res * 10 + n % 10;
		n = n / 10;
	}
	printf("result: %d\n",res);
	return 0;
}
